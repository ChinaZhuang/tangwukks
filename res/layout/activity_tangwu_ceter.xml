<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:background="#8866ff00"
	        android:gravity="center"
	        android:text="个人中心"
	        android:textColor="#000000"
	        android:textSize="22sp" />
   
    

         <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" 
        android:background="@drawable/centerhead"
        >

             <ImageView
                 android:id="@+id/personface"
                 android:layout_width="fill_parent"
                 android:layout_height="70dp"
                 android:layout_marginTop="20dp"
                 android:src="@drawable/personface" />

		        <TextView
			        android:id="@+id/loginUser_name"
			        android:layout_width="fill_parent"
			        android:layout_height="35dip"
			        android:gravity="center"
			        android:text="魏总管"
			        android:textColor="#ffffff"
			        android:textSize="15sp" />
	      </LinearLayout>  
		
         
         <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" 
        >
			<TextView
			        android:id="@+id/loginUser_no"
			        android:layout_width="fill_parent"
			        android:layout_height="35dip"
			        android:drawableLeft="@android:drawable/ic_menu_agenda"
			        android:gravity="center"
			        android:text="工号：201301021002"
			        android:textColor="#000000"
			        android:textSize="15sp" />
			<TextView
			        android:id="@+id/textView4"
			        android:layout_width="fill_parent"
			        android:layout_height="35dip"
			        android:drawableLeft="@android:drawable/ic_menu_crop"
			        android:gravity="center"
			        android:text="单位:某某某有限公司"
			        android:textColor="#000000"
			        android:textSize="15sp" />
			<TextView
			        android:id="@+id/loginUser_phone"
			        android:layout_width="fill_parent"
			        android:layout_height="35dip"
			        android:drawableLeft="@android:drawable/ic_menu_call"
			        android:gravity="center"
			        android:text="手机号：18213067520"
			        android:textColor="#000000"
			        android:textSize="15sp" />
        </LinearLayout>    	
             
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:drawableLeft="@android:drawable/ic_menu_call"
             android:orientation="vertical" >

			 <Button 
		       android:onClick="editInfo"
		       android:layout_width="fill_parent"
		       android:layout_height="40dp"
		       android:drawableLeft="@android:drawable/ic_menu_call"
		        android:drawableRight="@android:drawable/ic_media_play"
		       android:text="编辑信息"
		       android:background="#ffffff"
		       /> 
		      <Button 
		       android:onClick="modifyPassword"
		       android:layout_width="fill_parent"
		       android:layout_height="40dp"
		       android:drawableLeft="@android:drawable/ic_menu_call"
		        android:drawableRight="@android:drawable/ic_media_play"
		       android:text="修改密码"
		       android:background="#ffffff" 
		       /> 
		       
		       <Button 
		       android:onClick="logout"
		       android:layout_width="fill_parent"
		       android:layout_height="40dp"
		       android:drawableLeft="@android:drawable/ic_menu_call"
		       android:drawableRight="@android:drawable/ic_media_play"
		       android:text="退出账号"
		       android:textColor="#ff0000"
		       android:background="#ffffff" 
		       /> 
		       
        </LinearLayout>

        </LinearLayout> 
         
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:layout_marginBottom="0dp"
             android:background="#000000"
             android:orientation="horizontal"
             android:layout_alignParentBottom="true"
             android:paddingTop="10dp" >

             <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
                 android:onClick="showInspectRecord"
                 >
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center_horizontal"
	                 android:src="@drawable/history2" />
	              <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="巡检记录"
			        android:textColor="#ffffff"
			        android:textSize="16sp" />
   
			</LinearLayout>
			
             <LinearLayout android:orientation="vertical"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
                  android:onClick="scanQrCode"
                 >
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center_horizontal"
	                 android:layout_weight="1"
	                 android:src="@drawable/xunjian3" />
	             <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="立即巡检"
			        android:textColor="#ffffff"
			        android:textSize="16sp" />
			</LinearLayout>
			
             <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
                 android:onClick="inspectTask"
                 >
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center_horizontal"
	                 android:layout_weight="1"
	                 android:src="@drawable/duty2" />
	             <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="巡检任务"
			        android:textColor="#ffffff"
			        android:textSize="16sp" />
			</LinearLayout>
			
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
                android:onClick="centerInfo"
                >
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center_horizontal"
	                 android:layout_weight="1"
	                 android:src="@drawable/personcenter2" />
	             <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="个人中心"
			        android:textColor="#ffffff"
			        android:textSize="16sp" />
	        </LinearLayout>
         </LinearLayout>

</RelativeLayout>